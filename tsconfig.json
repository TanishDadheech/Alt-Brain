{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "nodenext",             // changed
    "target": "esnext",
    "moduleResolution": "nodenext",   // changed
    "types": ["node"],                // changed

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,          // changed
    // "verbatimModuleSyntax": true,   // changed â†’ removed (caused ESM error)
    "skipLibCheck": true
  }
}
